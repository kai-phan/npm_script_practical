{
  "name": "npm_script_practical",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "config": {
    "port": "3030"
  },
  "scripts": {
    "start": "node src/index.js",
    "poststart": "echo \"start done\"",
    "server": "npm-run-all -p server:*",
    "server:create": "http-server ./public -p $npm_package_config_port",
    "server:launch": "open http://localhost:$npm_package_config_port",
    "pretest": "npm run lint",
    "test": "jest",
    "test:watch": "npm run test -- --watch",
    "test:ci": "npm run test:watch -- --ci",
    "coverage": "jest --coverage",
    "precoverage": "rm -rf ./coverage",
    "postcoverage": "open ./coverage/lcov-report/index.html",
    "eslint": "eslint --cache --fix src/",
    "bineslint": "./node_modules/.bin/eslint --cache --fix ./",
    "prettier": "prettier --write --tab-width=2 ./",
    "lint": "npm-run-all lint:** prettier",
    "lint-parallel": "npm run eslint & npm run prettier & echo \"lint parallel\" & wait",
    "lint-all": "npm-run-all -p eslint prettier && echo \"lint all done\"",
    "lint:js": "npm run eslint",
    "lint:css": "stylelint --fix \"./**/*.css\"",
    "lint:css:fmt": "stylefmt --recursive ./",
    "prebuild:css": "npm run lint:css:fmt && rm -rf ./public/index.css",
    "build:css": "node-sass src/index.css | postcss -o public/index.css",
    "watch:lint": "onchange \"./**/*.js\" \"./**/*.css\" -- npm run lint",
    "watch:css": "onchange \"./**/*.css\" -- npm run build:css",
    "log:env": "env | grep \"config\"",
    "log:pkgname": "echo $npm_package_name",
    "log:port": "env | grep \"npm_package_config_port\"",
    "log:config": "npm config ls -l",
    "set:config": "npm config set npm_script_practical:port 3001",
    "prepare": "husky install",
    "precommit": "npm run lint"
  },
  "keywords": [],
  "author": "kai",
  "license": "ISC",
  "devDependencies": {
    "eslint": "^8.51.0",
    "jest": "^29.7.0",
    "node-sass": "^9.0.0",
    "onchange": "^7.1.0",
    "postcss": "^8.4.31",
    "prettier": "^3.0.3",
    "husky": "^8.0.0"
  },
  "dependencies": {
    "http-server": "^14.1.1",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^10.1.0",
    "stylefmt": "^6.0.3",
    "stylelint": "^15.11.0"
  }
}
